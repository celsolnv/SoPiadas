<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.soPiadas"
        version="1.0.0"
        xmlns="http://src.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0">
    <name>SoPiadas</name>
    <description>
        Só piadas é um aplicativo criado durante a pandemia do covid-19 para que 
        as pessoas se sintam mais alegres. 
        Além de ajudar as pessoas a se socializarem.
    </description>
    <author email="celsolnv27@gmail.com">
        Celso Leandro Nascimento Vasconcelos
    </author>
    <content src="index.html" />

    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-x-socialsharing" source="npm" version="5.4.0" />

    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature> 
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <preference name="android-minSdkVersion"  value="16" />
        <preference name="android-targetSdkVersion"  value="26" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="src/res/icon/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="src/res/icon/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="src/res/icon/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="src/res/icon/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="src/res/icon/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="src/res/icon/android/drawable-xxxhdpi-icon.png" />
    </platform>

</widget>
